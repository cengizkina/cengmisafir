<h1>Yazılar</h1>

<table>
  <thead>
    <tr>
      <th>ad</th>
      <th>Başlık</th>
      <th>İçerik</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Göster', post %></td>
        <td><%= link_to 'Düzenle', edit_post_path(post) %></td>
        <td><%= link_to 'Sil', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Yeni Yazı Ekle', new_post_path %>
